<body>
	<header class="container">
	<a href="/"><img src="/img/logo.png" id="logo" height="64" width="245"  /></a>
	<nav class="txtcenter">
		<% @categories.each do |cat| %>
			<span class="<%= cat.url %> mainnav">
				<a href="/category/<%= cat.url %>" style="" class="nav <%= active cat.url %>"><%= cat.name %></a>
				<ul class="subnav hide">
					<% cat.subcategories.sort! { |a,b| a.position <=> b.position} %>
					<% cat.subcategories.each do |sub| %>
						<li><a href="/category/<%= "#{cat.url}/#{sub.url}" %>" ><%= sub.name %></a></li>
					<% end %>
				</ul>
			</span>
		<% end %>
	</nav>
</header>
	<%= yield %>
